{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "text.prismaphp.mustache.injection",
  "injectionSelector": "L:text.html.php -meta.embedded.block.php, L:string.quoted.heredoc.php, L:string.quoted.nowdoc.php, L:meta.embedded.html",
  "patterns": [
    {
      "name": "meta.embedded.expression.prismaphp",
      "begin": "(?<!\\$)\\{(?!\\{)",
      "end": "\\}",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.template-expression.begin.js" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.template-expression.end.js" }
      },
      "contentName": "source.js",
      "patterns": [{ "include": "source.js" }]
    }
  ]
}
