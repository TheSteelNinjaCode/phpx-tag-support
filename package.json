{
  "name": "phpx-tag-support",
  "displayName": "PHPX Tag Support",
  "description": "Provides support for JSX-like tags in PHP, including hover info, Peek Definition for tags, and diagnostics for missing imports.",
  "version": "3.1.5",
  "publisher": "JeffersonAbrahamOmier",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:php",
    "workspaceContains:prisma-php.json"
  ],
  "icon": "icon.png",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "phpx-tag-support.hoverProvider",
        "title": "PHPX: Show Tag Info"
      },
      {
        "command": "phpx-tag-support.peekTagDefinition",
        "title": "PHPX: Peek Tag Definition"
      },
      {
        "command": "phpx-tag-support.refreshRoutes",
        "title": "Refresh Routes",
        "category": "PHPX"
      },
      {
        "command": "phpx-tag-support.showRoutes",
        "title": "Show All Available Routes",
        "category": "PHPX"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/acorn": "^4.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheSteelNinjaCode/phpx-tag-support.git"
  },
  "bugs": {
    "url": "https://github.com/TheSteelNinjaCode/phpx-tag-support/issues"
  },
  "homepage": "https://prismaphp.tsnc.tech/",
  "license": "MIT",
  "dependencies": {
    "acorn": "^8.15.0",
    "acorn-walk": "^8.3.4",
    "fast-xml-parser": "^5.2.1",
    "php-parser": "^3.2.3",
    "typescript": "^5.8.3"
  }
}
